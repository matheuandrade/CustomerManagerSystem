@model CustomerManagerSystem.WEB.Models.User

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" }) <font color="red">*</font>
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Email, new { @class = "form-control", @maxlength = 60 })
            @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" }) <font color="red">*</font>
        </div>
        <div class="col-sm-10">
            @Html.PasswordFor(c => c.Password, new { @class = "form-control", @maxlength = 15 })
            @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
}
